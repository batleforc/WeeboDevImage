FROM linuxserver/wireguard:latest

LABEL org.opencontainers.image.authors="batleforc"
LABEL org.opencontainers.image.url="{{.Repo}}wireguard"
LABEL org.opencontainers.image.title="Wireguard"

# Install Wireguard REST API
RUN wget https://github.com/FokiDoki/WireRest/releases/download/0.7-BETA/install.sh && \
    chmod +x install.sh

ENTRYPOINT [ "install.sh" ]